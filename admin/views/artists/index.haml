%ul.nav.nav-tabs
  %li.active=link_to tag_icon(:list, pat(:list)), url(:artists, :index)
  %li=link_to tag_icon(:plus, pat(:new)), url(:artists, :new)

.tabs-content
  %table#list.table.table-striped.table-hover.table-condensed
    %thead
      %tr
        %th.header.list-menu
          .dropdown
            %a.list-menu-toggle.dropdown-toggle{:href => '#', :'data-toggle' => :dropdown}
              =tag_icon :magic
              %span.caret
            %ul.list-menu.dropdown-menu{:role => :menu}
              %li.list-menu-wrapper=link_to tag_icon(:check, pat(:select_all)), '#', :id => 'select-all', :class => 'list-menu-link'
              %li.list-menu-wrapper.list-menu-wrapper-disabled
                =link_to tag_icon(:'check-empty', pat(:deselect_all)), '#', :id => 'deselect-all', :class => 'list-menu-link list-menu-link-disabled'
              %li.list-menu-divider.divider
              %li.list-menu-wrapper.list-menu-wrapper-disabled
                =link_to tag_icon(:trash, pat(:delete_selected)), '#', :id => 'delete-selected', :class => 'list-menu-link list-menu-link-disabled'
                .list-menu-popover-delete-selected.popover.right
                  .arrow
                  %h3.popover-title=pat(:delete_selected_title)
                  .popover-content
                    = form_tag url(:artists, :destroy_many), :method => :delete do
                      =hidden_field_tag :artist_ids, :'data-delete-many-ids' => true
                      =submit_tag pat(:delete), :class =>'list-menu-popover-delete-selected-btn btn btn-danger btn-small'
                      .btn.btn-default.btn-small.cancel=pat(:cancel)
        %th.header= mat(:artist, :id)
        %th.header= mat(:artist, :created_at)
        %th.header= mat(:artist, :updated_at)
        %th.header= mat(:artist, :name)
        %th.header= mat(:artist, :slug)
        %th.header= mat(:artist, :real_name)
        %th.header= mat(:artist, :soundcloud)
        %th.header= mat(:artist, :bio)
        %th.header= mat(:artist, :page_image)
        %th.header= mat(:artist, :list_image)
        %th.header.list-row-action-header

    %tbody
      -@artists.each do |artist|
        %tr.list-row
          %td.list-column.list-selectable
            =check_box_tag 'artist_ids[]', :value => artist.id, :class => 'list-selectable-checkbox'
          %td.list-column=artist.id
          %td.list-column=artist.created_at
          %td.list-column=artist.updated_at
          %td.list-column=artist.name
          %td.list-column=artist.slug
          %td.list-column=artist.real_name
          %td.list-column=artist.soundcloud
          %td.list-column=artist.bio
          %td.list-column=artist.page_image
          %td.list-column=artist.list_image
          %td.list-column.list-row-action
            .list-row-action-wrapper
              =link_to tag_icon(:edit), :href => url(:artists, :edit, :id => artist.id), :rel => :tooltip, :title => "#{pat(:edit)} artist", :class => 'list-row-action-wrapper-link'
              =link_to tag_icon(:trash), :rel => :tooltip, :title => "#{pat(:delete)} artist", :class => 'list-row-action-delete-one list-row-action-wrapper-link'
              .popover.list-row-action-popover-delete-one.left
                .arrow
                %h3.popover-title=pat(:delete, :model => "artist")
                .popover-content
                  = form_tag url(:artists, :destroy, :id => artist.id), :method => :delete do
                    =submit_tag pat(:delete), :class =>'list-row-action-popover-delete-one-btn btn btn-danger btn-small'
                    .btn.btn-default.btn-small.cancel=pat(:cancel)
