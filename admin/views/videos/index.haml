%ul.nav.nav-tabs
  %li.active=link_to tag_icon(:list, pat(:list)), url(:videos, :index)
  %li=link_to tag_icon(:plus, pat(:new)), url(:videos, :new)

.tabs-content
  %table#list.table.table-striped.table-hover.table-condensed
    %thead
      %tr
        %th.header.list-menu
          .dropdown
            %a.list-menu-toggle.dropdown-toggle{:href => '#', :'data-toggle' => :dropdown}
              =tag_icon :magic
              %span.caret
            %ul.list-menu.dropdown-menu{:role => :menu}
              %li.list-menu-wrapper=link_to tag_icon(:check, pat(:select_all)), '#', :id => 'select-all', :class => 'list-menu-link'
              %li.list-menu-wrapper.list-menu-wrapper-disabled
                =link_to tag_icon(:'check-empty', pat(:deselect_all)), '#', :id => 'deselect-all', :class => 'list-menu-link list-menu-link-disabled'
              %li.list-menu-divider.divider
              %li.list-menu-wrapper.list-menu-wrapper-disabled
                =link_to tag_icon(:trash, pat(:delete_selected)), '#', :id => 'delete-selected', :class => 'list-menu-link list-menu-link-disabled'
                .list-menu-popover-delete-selected.popover.right
                  .arrow
                  %h3.popover-title=pat(:delete_selected_title)
                  .popover-content
                    = form_tag url(:videos, :destroy_many), :method => :delete do
                      =hidden_field_tag :video_ids, :'data-delete-many-ids' => true
                      =submit_tag pat(:delete), :class =>'list-menu-popover-delete-selected-btn btn btn-danger btn-small'
                      .btn.btn-default.btn-small.cancel=pat(:cancel)
        %th.header= mat(:video, :id)
        %th.header= mat(:video, :created_at)
        %th.header= mat(:video, :updated_at)
        %th.header= mat(:video, :title)
        %th.header= mat(:video, :release_date)
        %th.header= mat(:video, :service)
        %th.header= mat(:video, :vimeo_id)
        %th.header= mat(:video, :youtube_id)
        %th.header.list-row-action-header

    %tbody
      -@videos.each do |video|
        %tr.list-row
          %td.list-column.list-selectable
            =check_box_tag 'video_ids[]', :value => video.id, :class => 'list-selectable-checkbox'
          %td.list-column=video.id
          %td.list-column=video.created_at
          %td.list-column=video.updated_at
          %td.list-column=video.title
          %td.list-column=video.release_date
          %td.list-column=video.service
          %td.list-column=video.vimeo_id
          %td.list-column=video.youtube_id
          %td.list-column.list-row-action
            .list-row-action-wrapper
              =link_to tag_icon(:edit), :href => url(:videos, :edit, :id => video.id), :rel => :tooltip, :title => "#{pat(:edit)} video", :class => 'list-row-action-wrapper-link'
              =link_to tag_icon(:trash), :rel => :tooltip, :title => "#{pat(:delete)} video", :class => 'list-row-action-delete-one list-row-action-wrapper-link'
              .popover.list-row-action-popover-delete-one.left
                .arrow
                %h3.popover-title=pat(:delete, :model => "video")
                .popover-content
                  = form_tag url(:videos, :destroy, :id => video.id), :method => :delete do
                    =submit_tag pat(:delete), :class =>'list-row-action-popover-delete-one-btn btn btn-danger btn-small'
                    .btn.btn-default.btn-small.cancel=pat(:cancel)
