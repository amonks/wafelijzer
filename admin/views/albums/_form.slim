/ bandcamp url
- error = @album.errors.key?(:bandcamp_url) && @album.errors[:bandcamp_url].count > 0
fieldset class='control-group#{error ? ' has-error' : ''}'
	= f.label :bandcamp_url, :class => 'control-label'
	div class='controls'
		= f.text_field :bandcamp_url, :class => 'form-control input-large input-with-feedback'
		span class='help-inline' = error ? f.error_message_on(:bandcamp_url, :class => 'text-error') : pat(:example)

