/ personnel
= label_tag "Personnel", :class => 'control-label'
- Artist.where(:albums => @album).each do |artist|
	fieldset class='control-group'
		= label_tag artist.name + "'s Role", :class => 'control-label'
		= text_field_tag 'artists[' + artist.id.to_s + ']', :value => AlbumsArtists.where(:album_id => @album.id, :artist_id => artist.id).first.role
		= check_box_tag 'artistsEnabled[' + artist.id.to_s + ']', :checked => true
- Artist.exclude(:albums => @album).each do |artist|
	fieldset class='control-group'
		= label_tag artist.name + "'s Role", :class => 'control-label'
		= text_field_tag 'artists[' + artist.id.to_s + ']', :placeholder => "Producer"
		= check_box_tag 'artistsEnabled[' + artist.id.to_s + ']', :checked => false

div class="form-actions"
	= f.submit pat(:save), :class => 'btn btn-primary'
	|&nbsp;
	= f.submit pat(:save_and_continue), :class => 'btn btn-info', :name => 'save_and_continue'
	|&nbsp;
	= link_to pat(:cancel), url(:albums, :index), :class => 'btn btn-default'